@using Biblioteca.ViewModels;
@model ChangePasswordViewModel;

@{
    ViewData["Title"] = "Change Password";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="account-container">
    <div class="account-login">
        <h2 class="text-center mb-4" style="font-family:OMEGLE ; font-size: 45px">Cambiar Password</h2>
        <form asp-action="ChangePassword" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-3">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ingrese Email", @readonly = "readonly" } })
                <label asp-for="Email">Ingrese Email</label>
            </div>
            <div class="form-floating mb-3">
                @Html.EditorFor(model => model.NewPassword, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ingrese Nuevo Password" } })
                <label asp-for="NewPassword">Ingrese Nuevo Password</label>
                @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
            </div>
            <div class="form-floating mb-3">
                @Html.EditorFor(model => model.ConfirmNewPassword, new { htmlAttributes = new { @class = "form-control", @placeholder = "Confirmar Nuevo Password" } })
                <label asp-for="ConfirmNewPassword">Confirmar Nuevo Password</label>
                @Html.ValidationMessageFor(model => model.ConfirmNewPassword, "", new { @class = "text-danger" })
            </div>            
            <div class="mb-3">
                <input type="submit" value="Cambiar" class="btn btn-success w-100 p-2" />
            </div>
            <div class="text-center mb-2">
                <a asp-controller="Account" asp-action="VerifyEmail" class="text-decoration-none mt-3"><b>Regresar</b> </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}
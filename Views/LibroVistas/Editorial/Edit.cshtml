@model Biblioteca.Models.Libro.Editorial
@{
    ViewData["Title"] = "Edit";
}

@using (Html.BeginForm())
{
    <div class="account-login2">
        <h2 class="text-center mb-4" style="font-family:OMEGLE ; font-size: 45px"><b>Modificar Editorial</b></h2>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="card-body">
                        <form asp-action="Edit" method="post">
                            @Html.AntiForgeryToken() <!--seguridad Token-->
                            <div class="form-floating mb-3">
                                @Html.EditorFor(model => model.EditorialLibro, new { htmlAttributes = new { @class = "form-control", @placeholder = "22" } })
                                <label for="Nombre">Ingrese el Nombre de la Editorial</label>
                                @Html.ValidationMessageFor(model => model.EditorialLibro, "", new { @class = "text-danger" })
                            </div>
                            <div class="mt-4 mb-0">
                                <div class="d-grid">
                                    <input type="submit" value="Guardar" class="btn btn-primary btn-block" />
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="card-footer text-center py-3">
                        <div class="small"><a href=@Url.Action("Listar","Editorial")><h5>Regresar a la Lista de Editoriales</h5></a></div>
                    </div>
    </div>
}

@model List<Biblioteca.Models.Libro.Editorial>
@{
    ViewData["title"] = "Listar";
}

<div class="account-listar">
    <h2 class="text-center mb-4" style="font-family:OMEGLE ; font-size: 45px"><b>Lista de Editoriales</b></h2>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item">
        <form action="@Url.Action("Create", "Editorial")" method="get" style="display:inline;">
            <button type="submit" class="btn btn-primary">Nueva Editorial</button>
        </form>
    </li>
</ol>

<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        Listado
    </div>
    <div class="card-body">
        <table id="datatablesSimple">
            <thead>
                <tr>
                    <th>Nombre de la Editorial</th>
                    <th>Operaciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var editorial in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => editorial.EditorialLibro)</td>
                        <td>
                            <a href="@Url.Action("Edit", "Editorial", new { id = editorial.Id })" class="btn btn-primary me-2"><i class="fas fa-edit"></i></a>
                            <form action="@Url.Action("Delete", "Editorial", new { id = editorial.Id })" method="post" style="display:inline;">
                                @Html.AntiForgeryToken() <!-- Agregar token de anti-falsificación -->
                                <button type="submit" class="btn btn-danger me-2" onclick="return confirm('¿Estás seguro de que deseas eliminar la EDITORIAL seleccionada?');"><i class="fas fa-trash"></i></button>
                            </form>
                        </td>
                    </tr>

                }

            </tbody>
        </table>
    </div>
</div>
</div>
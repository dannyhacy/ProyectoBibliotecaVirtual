@model Biblioteca.Models.Libro.Idioma
@{
    ViewData["Title"] = "Create";
}

@using (Html.BeginForm())
{
    <div class="account-login2">
        <h2 class="text-center mb-4" style="font-family:OMEGLE ; font-size: 45px"><b>Nuevo Idioma</b></h2>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="card-body">
            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken() <!--seguridad Token-->
                <div class="form-floating mb-3">
                    @Html.EditorFor(model => model.IdiomaLibro, new { htmlAttributes = new { @class = "form-control", @placeholder = "22" } })
                    <label for="Nombre">Ingrese Idioma</label>
                    @Html.ValidationMessageFor(model => model.IdiomaLibro, "", new { @class = "text-danger" })
                </div>
                <div class="mt-4 mb-0">
                    <div class="d-grid">
                        <input type="submit" value="Guardar" class="btn btn-primary btn-block" />
                    </div>
                </div>
            </form>
        </div>
        <div class="card-footer text-center py-3">
            <div class="small"><a href=@Url.Action("Listar","Idioma")><h5>Regresar a la Lista de Idiomas</h5></a></div>
        </div>
    </div>
}




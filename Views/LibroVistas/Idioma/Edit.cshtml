@model Biblioteca.Models.Libro.Idioma
@{
    ViewData["Title"] = "Edit";
}
@using (Html.BeginForm())
{
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-7">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header"><h3 class="text-center font-weight-light my-4">Modificar Idioma</h3></div>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="card-body">
                        <form asp-action="Edit" method="post">
                            @Html.AntiForgeryToken() 
                            <div class="form-floating mb-3">
                                @Html.EditorFor(model => model.IdiomaLibro, new { htmlAttributes = new { @class = "form-control", @placeholder = "22" } })
                                <label for="Nombre">Ingrese Idioma</label>
                                @Html.ValidationMessageFor(model => model.IdiomaLibro, "", new { @class = "text-danger" })
                            </div>
                            <div class="mt-4 mb-0">
                                <div class="d-grid">
                                    <input type="submit" value="Guardar" class="btn btn-primary btn-block" />
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="card-footer text-center py-3">
                        <div class="small"><a href=@Url.Action("Listar","Idioma")><h5>Regresar a la Lista de Idiomas</h5></a></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

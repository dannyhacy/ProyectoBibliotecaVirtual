@model List<Biblioteca.Models.Libro.UbicacionLibro>
@{
    ViewData["Title"] = "Listar";
}

<h1 class="mt-4">Lista de Ubicacion</h1>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item">
        <form action="@Url.Action("Create", "UbicacionLibro")" method="get" style="display:inline;">
            <button type="submit" class="btn btn-primary">Nueva Ubicación</button>
        </form>
    </li>
</ol>

<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        Listado
    </div>
    <div class="card-body">
        <table id="datatablesSimple">
            <thead>
                <tr>
                    <th>Ubicación de Libro</th>
                    <th>Operaciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ubicacion in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => ubicacion.Ubicacion)</td>
                        <td>
                            <a href="@Url.Action("Edit", "UbicacionLibro", new { id = ubicacion.Id })" class="btn btn-primary me-2"><i class="fas fa-edit"></i></a>
                            <form action="@Url.Action("Delete", "UbicacionLibro", new { id = ubicacion.Id })" method="post" style="display:inline;">
                                @Html.AntiForgeryToken() 
                                <button type="submit" class="btn btn-danger me-2" onclick="return confirm('¿Estás seguro de que deseas eliminar la UBICACIÓN seleccionada?');"><i class="fas fa-trash"></i></button>
                            </form>
                        </td>
                    </tr>

                }

            </tbody>
        </table>
    </div>
</div>


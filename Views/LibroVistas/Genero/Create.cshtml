@model Biblioteca.Models.Libro.Genero
@{
    ViewData["title"] = "Create";
}


@using (Html.BeginForm("Create", "Genero", FormMethod.Post))
{
    @Html.AntiForgeryToken() <!--seguridad Token-->
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-7">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header">
                        <h3 class="text-center font-weight-light my-4">Nuevo Género Literario</h3>
                    </div>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="card-body">
                        <div class="form-floating mb-3">
                            @Html.EditorFor(model => model.GeneroLibro, new { htmlAttributes = new { @class = "form-control", @placeholder = "22" } })
                            <label for="Nombre">Ingrese el Nombre del Género Literario</label>
                            @Html.ValidationMessageFor(model => model.GeneroLibro, "", new { @class = "text-danger" })
                        </div>
                        <div class="mt-4 mb-0">
                            <div class="d-grid">
                                <input type="submit" value="Guardar" class="btn btn-primary btn-block" />
                            </div>
                        </div>
                    </div>
                    <div class="card-footer text-center py-3">
                        <div class="small"><a href=@Url.Action("Listar", "Genero")><h5>Regresar a la Lista de Géneros Literarios</h5></a></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}



